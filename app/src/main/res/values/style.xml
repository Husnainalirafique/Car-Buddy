<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LayoutBgAndPaddings">
        <item name="android:paddingTop">@dimen/_35sdp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:background">@color/color_background</item>
    </style>
    <style name="textViewStyleRegular">
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:textColor">@color/color_textview</item>
    </style>
    <style name="textViewStyleMedium">
        <item name="fontFamily">@font/open_sans_medium</item>
        <item name="android:textColor">@color/color_textview</item>
    </style>
    <style name="textViewStyleBold">
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textColor">@color/color_textview</item>
    </style>
    <style name="edittextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="fontFamily">@font/open_sans_regular</item>
        <item name="android:paddingHorizontal">15dp</item>
    </style>
    <style name="ButtonStyle"  parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:backgroundTint">@color/color_button_primary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">10dp</item>
    </style>
</resources>